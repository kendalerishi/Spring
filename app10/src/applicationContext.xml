<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
       <bean id="wishBean" class="com.app10.beans.WishBean" init-method="init" destroy-method="destroy">
       <property name="wishMessage" value="hai"/>
       <property name="name" value="Ram"/>
       </bean>
       
       <bean id="helloBean" class="com.app10.beans.HelloBean" init-method="init" destroy-method="destroy">
       <property name="wishMessage" value="hello"/>
       <property name="name" value="Sita"/>
       </bean>
       
       <bean id="welcomeBean" class="com.app10.beans.WelcomeBean" init-method="init" destroy-method="destroy">
       <property name="wishMessage" value="welcome"/>
       <property name="name" value="Geeta"/>
       </bean>
</beans>